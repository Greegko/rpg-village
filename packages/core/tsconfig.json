{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "outDir": "dist/",
  },
  "include": [
    "public-api.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}