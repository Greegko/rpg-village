{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUnusedLocals": true,
    "strict": true,
    "rootDir": "./src",
    "experimentalDecorators": true,
    "paths": {
      "@core": ["./src/core"],
      "@game": ["./src/game"],
      "@core-types": ["./src/types"],
      "@models": ["./src/models"],
      "@modules": ["./src/modules"],
      "@modules/*": ["./src/modules/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@lib/*": ["./src/lib/*"]
    }
  }
}
