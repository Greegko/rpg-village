{
  "compilerOptions": {
    "rootDir": "../src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "composite": true,
    "outDir": "../dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "@core": ["./core"],
      "@game": ["./game"],
      "@core-types": ["./types"],
      "@models": ["./models"],
      "@features": ["./features"],
      "@features/*": ["./features/*"],
      "@lib/*": ["./lib/*"]
    }
  }
}
