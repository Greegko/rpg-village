{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist/tests",
    "paths": {
      "@core": ["../dist/core"],
      "@game": ["../dist/game"],
      "@models": ["../dist/models"],
      "@features": ["../dist/features"],
      "@features/*": ["../dist/features/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["**/*"],
  "references": [{ "path": "../src" }]
}
