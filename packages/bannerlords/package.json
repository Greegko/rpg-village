{
  "name": "@rpg-village/bannerlords",
  "private": true,
  "scripts": {
    "start": "concurrently npm:core:start npm:web:serve npm:web:type-checking",
    "build": "npm run core:build && npm run web:build",
    "core:start": "npm run build:watch --prefix ./core",
    "core:build": "npm run build --prefix ./core",
    "core:build-test": "npm run build:test --prefix ./core",
    "core:test": "npm run test:watch --prefix ./core",
    "web:serve": "npm run serve --prefix ./web",
    "web:type-checking": "npm run type-checking --prefix ./web",
    "web:build": "npm run build --prefix ./web",
    "prepare": "true"
  }
}
