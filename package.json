{
  "name": "rpg-village",
  "private": true,
  "scripts": {
    "core:start": "npm run build:watch --prefix packages/core",
    "features:start": "npm run build:watch --prefix packages/features",
    "village-manager:start": "npm run start --prefix packages/village-manager",
    "bannerlords:start": "npm run start --prefix packages/bannerlords",
    "prepare": "for P in packages/*/; do (cd $P && npm run prepare); done"
  },
  "workspaces": [
    "packages/core",
    "packages/features",
    "packages/village-manager/core",
    "packages/village-manager/web",
    "packages/bannerlords/core",
    "packages/bannerlords/web"
  ],
  "dependencies": {
    "concurrently": "8.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "prettier": "2.8.8"
  }
}
