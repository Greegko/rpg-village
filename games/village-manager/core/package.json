{
  "name": "@rpg-village/village-manager-core",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b ./src/tsconfig.json",
    "build:watch": "tsc -b ./src/tsconfig.json --watch --preserveWatchOutput",
    "build:test": "tsc -b ./tests/tsconfig.json --watch --preserveWatchOutput",
    "test": "ava",
    "test:watch": "ava --watch",
    "prepare": "ts-patch install -s"
  },
  "exports": {
    ".": "./dist/public-api.js",
    "./game": "./dist/game/index.js",
    "./features/*": "./dist/features/*/index.js",
    "./lib/*": "./dist/lib/*.js"
  },
  "peerDependencies": {
    "@rpg-village/core": "workspace: 0.0.0",
    "@rpg-village/features": "workspace: 0.0.0",
    "inversify": "6.0.2",
    "rambda": "9.2.1",
    "shortid": "2.2.16",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@types/chance": "1.1.6",
    "@types/shortid": "0.0.32",
    "@types/node": "18.19.55",
    "reflect-metadata": "0.2.2",
    "ava": "6.1.3",
    "ts-patch": "3.2.1",
    "typescript": "5.5.2",
    "typescript-transform-paths": "3.4.7",
    "tsx": "4.15.7",
    "chance": "1.1.11"
  },
  "types": "dist/public-api.d.ts",
  "main": "dist/public-api.js"
}
