{
  "name": "@rpg-village/village-manager-core",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b ./src/tsconfig.json",
    "start": "tsc -b ./src/tsconfig.json --watch --preserveWatchOutput",
    "build:test": "tsc -b ./tests/tsconfig.json --watch --preserveWatchOutput",
    "test": "vitest run",
    "prepare": "ts-patch install -s"
  },
  "exports": {
    ".": "./dist/public-api.js",
    "./game": "./dist/game/index.js",
    "./features/*": "./dist/features/*/index.js",
    "./lib/*": "./dist/lib/*.js"
  },
  "peerDependencies": {
    "@rpg-village/core": "workspace: *",
    "@rpg-village/features": "workspace: *",
    "inversify": "6.2.2",
    "rambda": "9.4.2",
    "shortid": "2.2.17",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@types/chance": "1.1.6",
    "@types/shortid": "2.2.0",
    "@types/node": "18.19.76",
    "reflect-metadata": "0.2.2",
    "vitest": "3.0.6",
    "ts-patch": "3.3.0",
    "typescript": "5.7.3",
    "typescript-transform-paths": "3.5.3",
    "tsx": "4.19.3",
    "chance": "1.1.12"
  },
  "types": "dist/public-api.d.ts",
  "main": "dist/public-api.js"
}
