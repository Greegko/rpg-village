{
  "trailingComma": "all",
  "printWidth": 140,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "arrowParens": "avoid",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@rpg-village/",
    "@rpg-village/village-manager",
    "^@(web|lib)",
    "^\\.\\.?/.*(?<!scss)$",
    "scss"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": ["classProperties", "typescript", "decorators-legacy", "jsx"],
  "importOrderSortSpecifiers": true
}
